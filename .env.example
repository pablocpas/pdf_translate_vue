# PDF Translator Environment Configuration

# ===========================================
# API Configuration
# ===========================================

# OpenAI API Key (required for translation)
OPENAI_API_KEY=your_openai_api_key_here

# OpenRouter Base URL (if using OpenRouter)
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# ===========================================
# Model Configuration  
# ===========================================

# GPT Model to use for translation
GPT_MODEL=gpt-4o-mini

# Translation parameters
TEMPERATURE=0.3
MAX_TOKENS=4000

# ===========================================
# Celery Configuration
# ===========================================

# Celery Broker URL (Redis)
CELERY_BROKER_URL=redis://redis:6379/0

# Celery Result Backend (Redis)
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ===========================================
# Directory Configuration
# ===========================================

# Upload folder for original PDFs
UPLOAD_FOLDER=/app/uploads

# Translated folder for output PDFs
TRANSLATED_FOLDER=/app/translated

# Temporary folder for processing
TEMP_FOLDER=/app/temp

# ===========================================
# Processing Configuration
# ===========================================

# DPI for PDF to image conversion
DPI=300

# Font configuration
MIN_FONT_SIZE=8
FONT_SCALE_FACTOR=0.8

# Task configuration
MAX_RETRIES=3
RETRY_DELAY_SECONDS=5
TASK_TIMEOUT_SECONDS=3600

# ===========================================
# Development Configuration
# ===========================================

# Enable debug mode
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
